
<ul class="nav nav-pills pull-right">
	<% if user_signed_in? %>

	<div class="dropdown">
		<div class="btn-group navbar-btn pull-right">
			<button type="button" class="btn btn-info"><%= "#{current_user.username}" %></button>
			<button type="button" id="drop" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu" role="menu">
				<li><%= link_to "#{current_user.name}'s Profile", main_app.profile_path %></li>
				<li class="divider"></li>
				<li><%= link_to "Sign out", main_app.destroy_user_session_path, :method => :delete%></li>
			</ul>
		</div>  
	</div>
	<% else %>
	<li><%= link_to "Sign in", main_app.new_user_session_path, :class => "btn btn-success"%></li>
	<li><%= link_to "Sign up", main_app.new_user_registration_path, :class => "btn btn-success" %></li>
	<% end %>
</ul>