<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Sign in</h3>
	</div>

	<div class="panel-body">


		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div><%= f.label :login %><br />
			<%= f.text_field :login, :autofocus => true , :class => "form-control" %></div>

			<div><%= f.label :password %><br />
				<%= f.password_field :password , :class => "form-control" %></div>

				<% if devise_mapping.rememberable? -%>
				<div><%= f.check_box :remember_me , :class => "form-control" %> <%= f.label :remember_me %></div>
				<% end -%>

				<div><%= f.submit "Sign in" , :class => "btn btn-success"%></div>
				<% end %>

				<%= render "devise/shared/links" %>

			</div>
		</div>